<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ZENDEE" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mint</item>
        <item name="colorPrimaryVariant">@color/mint</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/mint</item>
        <item name="colorSecondaryVariant">@color/mint</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/mint</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ZENDEE.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_inset</item>
        <item name="postSplashScreenTheme">@style/Theme.ZENDEE</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
    </style>

</resources>