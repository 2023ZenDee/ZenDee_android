<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/startFragment">

    <fragment
        android:id="@+id/mapFragment"
        android:name="com.ggd.zendee.feature.map.MapFragment"
        android:label="MapFragment" >
        <action
            android:id="@+id/action_mapFragment_to_issueFragment"
            app:destination="@id/issueFragment"
            app:enterAnim="@anim/anim_down_first"
            app:popExitAnim="@anim/anim_up_before" />
        <action
            android:id="@+id/action_mapFragment_to_writeFragment"
            app:destination="@id/writeFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.ggd.zendee.feature.profile.ProfileFragment"
        android:label="ProfileFragment" />
    <fragment
        android:id="@+id/rankingFragment"
        android:name="com.ggd.zendee.feature.ranking.RankingFragment"
        android:label="RankingFragment" />
    <fragment
        android:id="@+id/issueFragment"
        android:name="com.ggd.zendee.feature.issue.IssueFragment"
        android:label="IssueFragment" />
    <fragment
        android:id="@+id/writeFragment"
        android:name="com.ggd.zendee.feature.write.WriteFragment"
        android:label="WriteFragment" />


    <fragment
        android:id="@+id/startFragment"
        android:name="com.ggd.zendee.feature.start.StartFragment"
        android:label="fragment_start"
        tools:layout="@layout/fragment_start" >
        <action
            android:id="@+id/action_startFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_startFragment_to_signupNickFragment"
            app:destination="@id/signupNickFragment" />
        <action
            android:id="@+id/action_startFragment_to_mapFragment"
            app:destination="@id/mapFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.ggd.zendee.feature.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_mapFragment"
            app:destination="@id/mapFragment" />
    </fragment>

    <!-- Signup Fragment -->

    <fragment
        android:id="@+id/signupNickFragment"
        android:name="com.ggd.zendee.feature.signup.screen.SignupNickFragment"
        android:label="fragment_signup_nick"
        tools:layout="@layout/fragment_signup_nick" >
        <action
            android:id="@+id/signupNickFragment_to_signupIdFragment"
            app:destination="@id/signupIdFragment" />
    </fragment>
    <fragment
        android:id="@+id/signupIdFragment"
        android:name="com.ggd.zendee.feature.signup.screen.SignupIdFragment"
        android:label="fragment_signup_id"
        tools:layout="@layout/fragment_signup_id" >
        <action
            android:id="@+id/signupIdFragment_to_signupPasswordFragment"
            app:destination="@id/signupPasswordFragment" />
    </fragment>
    <fragment
        android:id="@+id/signupPasswordFragment"
        android:name="com.ggd.zendee.feature.signup.screen.SignupPasswordFragment"
        android:label="fragment_signup_password"
        tools:layout="@layout/fragment_signup_password" >
        <action
            android:id="@+id/signupPasswordFragment_to_signupEmailFragment"
            app:destination="@id/signupEmailFragment" />
    </fragment>
    <fragment
        android:id="@+id/signupEmailFragment"
        android:name="com.ggd.zendee.feature.signup.screen.SignupEmailFragment"
        android:label="fragment_signup_email"
        tools:layout="@layout/fragment_signup_email" >
        <action
            android:id="@+id/signupEmailFragment_to_signupEmailCheckFragment"
            app:destination="@id/signupEmailCheckFragment" />
    </fragment>
    <fragment
        android:id="@+id/signupEmailCheckFragment"
        android:name="com.ggd.zendee.feature.signup.screen.SignupEmailCheckFragment"
        android:label="fragment_signup_email_check"
        tools:layout="@layout/fragment_signup_email_check" >
        <action
            android:id="@+id/action_signupEmailCheckFragment_to_mapFragment"
            app:destination="@id/mapFragment" />
    </fragment>


</navigation>