<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="200dp"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/filter_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="필터"
        android:fontFamily="@font/pretendard_bold"
        android:textSize="26dp"
        android:textColor="@color/black"

        android:layout_marginTop="60dp"
        android:layout_marginStart="28dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sort_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:fontFamily="@font/pretendard_semibold"
        android:text="정렬"
        android:textColor="@color/black"
        android:textSize="20dp"

        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="@+id/filter_txt"
        app:layout_constraintTop_toBottomOf="@+id/filter_txt" />

    <CheckedTextView
        android:id="@+id/view_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="조회수 순"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@+id/sort_txt"
        app:layout_constraintTop_toBottomOf="@+id/sort_txt" />

    <CheckedTextView
        android:id="@+id/like_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="좋아요 순"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toStartOf="@+id/sort_txt"
        app:layout_constraintTop_toBottomOf="@+id/view_filter" />


    <CheckedTextView
        android:id="@+id/dislike_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="싫어요 순"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toStartOf="@+id/sort_txt"
        app:layout_constraintTop_toBottomOf="@+id/like_filter" />

    <TextView
        android:id="@+id/tag_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:fontFamily="@font/pretendard_semibold"
        android:text="정렬"
        android:textColor="@color/black"
        android:textSize="20dp"

        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="@+id/filter_txt"
        app:layout_constraintTop_toBottomOf="@+id/dislike_filter" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tag_recyclerview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"

        android:layout_marginTop="15dp"
        tools:itemCount="7"
        tools:listitem="@layout/item_ranking_tag"
        app:layout_constraintStart_toStartOf="@+id/tag_txt"
        app:layout_constraintTop_toBottomOf="@+id/tag_txt" />





</androidx.constraintlayout.widget.ConstraintLayout>