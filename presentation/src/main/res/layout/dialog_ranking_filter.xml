<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/filter_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="필터"
        android:fontFamily="@font/pretendard_bold"
        android:textSize="24dp"
        android:textColor="@color/black"

        android:layout_marginTop="60dp"
        android:layout_marginStart="28dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sort_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:fontFamily="@font/pretendard_semibold"
        android:text="정렬"
        android:textColor="@color/black"
        android:textSize="18dp"

        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="@+id/filter_txt"
        app:layout_constraintTop_toBottomOf="@+id/filter_txt" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="#00FFFFFF"

        android:text="조회수 순"
        android:textColor="@color/black"

        app:layout_constraintStart_toStartOf="@+id/sort_txt"
        app:layout_constraintTop_toBottomOf="@+id/sort_txt" />









</androidx.constraintlayout.widget.ConstraintLayout>