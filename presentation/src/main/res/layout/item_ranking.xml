<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/white_rectangle_noline">

        <ImageView
            android:id="@+id/tag_img"
            android:layout_width="68dp"
            android:layout_height="68dp"

            android:layout_margin="10dp"
            android:background="@drawable/notice_tag"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            />


        <TextView
            android:id="@+id/title_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:text="지금 수성못에 아이유 떳다아아"
            android:textSize="16dp"
            android:fontFamily="@font/pretendard_semibold"
            android:textColor="@color/black"

            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@+id/tag_img"
            app:layout_constraintTop_toTopOf="@+id/tag_img" />

        <ImageView
            android:id="@+id/three_dot_btn"
            android:layout_width="24dp"
            android:layout_height="24dp"

            android:layout_marginEnd="10dp"
            android:background="@drawable/three_dot"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/title_txt"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/address_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/pretendard_medium"
            android:text="대구 수성구 두산동"
            android:textColor="@color/text_gray"
            android:textSize="12dp"

            app:layout_constraintStart_toStartOf="@+id/title_txt"
            app:layout_constraintTop_toBottomOf="@+id/title_txt"
            tools:ignore="TextSizeCheck" />

        <TextView
            android:id="@+id/sep_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/pretendard_medium"
            android:text=" | "
            android:textColor="@color/text_gray"
            android:textSize="12dp"
            app:layout_constraintStart_toEndOf="@+id/address_txt"
            app:layout_constraintTop_toTopOf="@+id/address_txt"
            tools:ignore="TextSizeCheck" />

        <TextView
            android:id="@+id/time_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/pretendard_medium"
            android:text="3분 전"
            android:textColor="@color/text_gray"
            android:textSize="12dp"
            app:layout_constraintStart_toEndOf="@+id/sep_txt"
            app:layout_constraintTop_toTopOf="@+id/sep_txt"
            tools:ignore="TextSizeCheck,TextSizeCheck" />

        <TextView
            android:id="@+id/views_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/pretendard_medium"
            android:text="조회수 192회"
            android:textColor="@color/text_gray"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/tag_img"
            app:layout_constraintStart_toStartOf="@+id/address_txt"
            tools:ignore="TextSizeCheck" />

        <TextView
            android:id="@+id/sep2_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/pretendard_medium"
            android:text=" · "
            android:textColor="@color/text_gray"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/views_txt"
            app:layout_constraintStart_toEndOf="@+id/views_txt"
            tools:ignore="TextSizeCheck,TextSizeCheck" />

        <TextView
            android:id="@+id/comments_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/pretendard_medium"
            android:text="댓글 2"
            android:textColor="@color/text_gray"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/sep2_txt"
            app:layout_constraintStart_toEndOf="@+id/sep2_txt"
            tools:ignore="TextSizeCheck" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>